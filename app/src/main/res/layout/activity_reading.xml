<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reading_act"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ReadingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_reading"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="-64dp">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/arrow_left_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_arrow_left_alpha" />

            <ImageView
                android:id="@+id/import_contacts"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_import_contacts" />

            <ImageView
                android:id="@+id/arrow_right_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_arrow_right" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_close" />

            <ImageView
                android:id="@+id/bookmark_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="270dp"
                app:srcCompat="@drawable/ic_bookmark" />

            <ImageView
                android:id="@+id/tune_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_tune" />

        </LinearLayout>

        <TextView
            android:id="@+id/text"
            android:layout_width="299dp"
            android:layout_height="560dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="160dp"
            android:gravity="top"
            android:lineSpacingExtra="25sp"
            android:text="Learn English online and improve your skills through our high - quality"
            android:textSize="50sp" />

        <ImageView
            android:id="@+id/reading_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="90dp"
            app:srcCompat="@drawable/reading_progress_bar" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>