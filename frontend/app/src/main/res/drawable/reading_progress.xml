<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Nền của ProgressBar -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="100dp"/> <!-- Độ bo tròn -->
            <solid android:color="#CCCCCC"/> <!-- Màu nền xám nhạt -->
        </shape>
    </item>

    <!-- Màu tiến trình -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="50dp"/> <!-- Độ bo tròn -->
                <solid android:color="#FF0000"/> <!-- Màu đỏ cho tiến trình -->
            </shape>
        </clip>
    </item>

</layer-list>