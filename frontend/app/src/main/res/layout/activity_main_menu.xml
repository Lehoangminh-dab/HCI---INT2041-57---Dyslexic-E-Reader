                    android:id="@+id/progressBar9"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:indeterminateBehavior="repeat"
                    android:indeterminateDuration="@integer/material_motion_duration_long_1"
                    android:max="100"
                    android:maxWidth="60dip"
                    android:maxHeight="16dip"
                    android:progress="50"
                    app:layout_constraintBottom_toTopOf="@id/totalWord9"
                    app:layout_constraintStart_toEndOf="@id/bookPoster9" />

                <TextView
                    android:id="@+id/totalWord9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginBottom="20dp"
                    android:text="1000 words"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/bookPoster9" />

